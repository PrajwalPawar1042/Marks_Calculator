<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="16dp"

        android:text="Grade to Percentage Converter"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Subject 1"
    android:textStyle="bold"
    android:layout_gravity=""
    android:textSize="18sp"
    android:padding="8dp" />

    <EditText
        android:id="@+id/editTextSubject1"
        android:layout_width="375dp"
        android:layout_height="60dp"

        android:layout_marginLeft="20dp"
        android:background="@drawable/custom_input"
        android:hint="Enter grade for subject 1"
        android:padding="10dp" />

    <TextView
        android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:textStyle="bold"
    android:text="Subject 2"
    android:textSize="18sp"
    android:padding="8dp" />

<EditText
    android:id="@+id/editTextSubject2"
    android:layout_width="375dp"
    android:layout_height="60dp"
    android:layout_marginLeft="20dp"
    android:background="@drawable/custom_input"
    android:hint="Enter grade for subject 2"
    android:padding="10dp" />

<TextView
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:textStyle="bold"

    android:layout_height="wrap_content"
    android:text="Subject 3"
    android:textSize="18sp"
    android:padding="8dp" />

<EditText
    android:id="@+id/editTextSubject3"
    android:layout_width="375dp"
    android:layout_marginLeft="20dp"
    android:layout_height="60dp"
    android:hint="Enter grade for subject 3"
    android:background="@drawable/custom_input"
    android:padding="10dp" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="176dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:padding="8dp"

        android:layout_marginTop="15dp"

        android:text="Calculate"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewResult"

        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@color/purple_500"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:text="                  Result:-"
        android:textSize="25sp"
        />

</LinearLayout>
