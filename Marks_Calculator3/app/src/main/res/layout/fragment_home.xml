<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/percentageTextView"
        android:layout_width="291dp"
        android:layout_height="79dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Percentage Calculator"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_obtained_marks"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Scored Marks"

        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_obtained_marks"
        android:layout_width="365dp"

        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_input"
        android:hint="Enter Marks Obtained"
        android:inputType="number"
        android:padding="10dp" />

    <TextView
        android:id="@+id/text_total_marks"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Total Marks"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_total_marks"
        android:layout_width="365dp"
        android:layout_height="55dp"
        android:background="@drawable/custom_input"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        android:hint="Enter Total Marks"
        android:inputType="number"
        android:padding="10dp" />


    <Button
        android:id="@+id/calculateButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        android:layout_marginStart="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Calculate" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="458dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="20dp"
        android:background="@color/purple_500"
        android:gravity="center"
        android:padding="10dp"
        android:text="Result:-"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

</LinearLayout>
